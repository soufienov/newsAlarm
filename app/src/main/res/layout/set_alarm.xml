<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:http="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.freedev.soufienov.newsAlarm.NewsAlarm"
    android:background="@android:color/white">


    <TimePicker
        android:id="@+id/timePicker4"
        android:layout_width="wrap_content"
        android:layout_height="186dp"
        android:layout_gravity="center_horizontal"
        android:clickable="false"
        android:timePickerMode="spinner"

        />




    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
        android:background="@drawable/customborder">

    <TextView
        android:id="@+id/editText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"

        android:text="Repeat"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />


        <Button
            android:id="@+id/days"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="6dp"
            android:background="?android:attr/selectableItemBackground"
            android:onClick="popDays" />


</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/customborder">

        <TextView
            android:id="@+id/textSnooz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Snooz"
            android:layout_marginTop="10dp"

            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <Spinner
        android:id="@+id/spinnerSnooz"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        android:entries="@array/snooz"
        android:layout_marginLeft="65dp"
        android:textAlignment="center"

        />
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/customborder"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ringtone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
android:layout_marginTop="10dp"
            android:text="Ringtone"

            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <Button
            android:id="@+id/ringtonebtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
             android:background="?android:attr/selectableItemBackground"

            android:layout_marginLeft="45dp"
            />
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/customborder"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Label"
            android:layout_marginTop="10dp"

            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <EditText
            android:id="@+id/labeltxt"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="74dp"
            android:textAlignment="center"
            android:text="alarm"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"

            android:layout_marginTop="6dp"
            android:onClick="setAlarmClock"
            android:text="Save"

            />
    </LinearLayout>

</LinearLayout>